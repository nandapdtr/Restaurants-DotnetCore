@using OdeToFood.Core
@model Restaurant

<div class="card">
	<div class="card-header">
		<h2>@Model.Name</h2>
	</div>
	<div class="card-body">
		<span>Location: @Model.Location</span>
		<span>Cuisine: @Model.Cuisine</span>
	</div>
	<div class="card-footer">
		<a class="btn btn-primary" asp-page="./Detail" asp-route-restaurantId="@Model.Id">Details</a>
		<a class="btn btn-primary" asp-page="./Edit" asp-route-restaurantId="@Model.Id">Edit</a>
		<a class="btn btn-primary" asp-page="./Delete" asp-route-restaurantId="@Model.Id">Delete</a>
	</div>
</div>