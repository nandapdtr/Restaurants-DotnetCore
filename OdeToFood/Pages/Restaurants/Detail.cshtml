@page "{restaurantId:int}"
@model OdeToFood.Pages.Restaurants.DetailModel
@{
}
<h1>Your restaurant details</h1>
@if(Model.Message != null){
	<div class="text text-info">@Model.Message</div>
}
<div> Id: @Model.Restaurant.Id </div>
<div> Name: @Model.Restaurant.Name </div>
<div> Location: @Model.Restaurant.Location </div>
<div> Cuisine: @Model.Restaurant.Cuisine </div>
<a asp-page="./List" class="btn btn-primary">Show All Restaurants</a>
