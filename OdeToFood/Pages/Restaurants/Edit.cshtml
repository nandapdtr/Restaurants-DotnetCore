@page "{restaurantId:int}"
@model OdeToFood.Pages.Restaurants.EditModel
@{
	ViewData["title"] = "Edit a Restaurant";
}
<h1>Editing @Model.Restaurant.Name</h1>

<form method="post">
	<input type="hidden" asp-for="Restaurant.Id"/>
	<div class="mb-3">
		<label asp-for="Restaurant.Name" class="form-label"></label>
		<input class="form-control" asp-for="Restaurant.Name"/>
	</div>

	<div class="mb-3">
		<label asp-for="Restaurant.Location" class="form-label"></label>
		<input class="form-control" asp-for="Restaurant.Location"/>
	</div>

	<div class="mb-3">
		<label asp-for="Restaurant.Cuisine" class="form-label"></label>
		<select class="form-select" asp-for="Restaurant.Cuisine" asp-items="Model.Cuisines"></select>
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
</form>
