@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
	ViewData["title"] = "Restaurants";
}
<h1>Restaurants</h1>

<form method="get">
	<div class="form-group">
		<div class="input-group">
			<input class="form-control" type="search" asp-for="SearchTerm"/>
			<button class="btn btn-primary">Search</button>
		</div>
	</div>
</form>
@foreach(var restaurant in Model.Restaurants)
{
	<partial name="_Summary" model="restaurant"></partial>
}
<a asp-page="./Edit" class="btn btn-primary">Add New Restaurant</a>

@section footer {
	<div>@Model.Message</div>
}
