@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
	ViewData["title"] = "Restaurants";
}
<h1>Restaurants</h1>

<form method="get">
	<div class="form-group">
		<div class="input-group">
			<input class="form-control" type="search" asp-for="SearchTerm"/>
			<button class="btn btn-primary">Search</button>
		</div>
	</div>
</form>

<table class="table">
	@foreach (var restaurant in Model.Restaurants)
	{
		<tr>
			<td>@restaurant.Name</td>
			<td>@restaurant.Location</td>
			<td>@restaurant.Cuisine</td>
			<td>
				<a class="btn btn-primary" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">Details</a>
				<a class="btn btn-primary" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">Edit</a>
				<a class="btn btn-primary" asp-page="./Delete" asp-route-restaurantId="@restaurant.Id">Delete</a>
			</td>
		</tr>
	}
</table>
<a asp-page="./Edit" class="btn btn-primary">Add New Restaurant</a>

@section footer {
	<div>@Model.Message</div>
}
